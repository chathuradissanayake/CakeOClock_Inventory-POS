@using IMS.CoreBusiness
@inject NavigationManager NavigationManager

@if (Inventories != null && Inventories.Count > 0)
{
    foreach (var inv in Inventories)
    {
        

        <tr>
            <td>@inv.InventoryName</td>
            <td>@inv.Quantity</td>
            <td>@inv.Price</td>
            
            <td>
                <button type="button" class="btn btn-dark" onclick="@(()=> EditInventory(inv.InventoryID))">Edit</button>
            </td>

        </tr>
    }
}
else
{
    <p>No inventories found.</p>
}

@code {
    [Parameter]
    public List<Inventory> Inventories { get; set; } = new List<Inventory>();

    private void EditInventory(int inventoryId)
    {
        //Console.WriteLine($"Editing inventory with ID: {inventoryId}");
        NavigationManager.NavigateTo($"/editinventory/{inventoryId}");
    }
}
